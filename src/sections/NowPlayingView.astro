---
import { X } from "lucide-astro";
import NowPlayingSongCard from "@/components/NowPlayingSongCard.astro";
import NowPlayingAboutTheArtist from "@/components/NowPlayingAboutTheArtist.astro";
import NowPlayingCredits from "@/components/NowPlayingCredits.astro";
import NowPlayingMerch from "@/components/NowPlayingMerch.astro";
import NowPlayingNextInQueue from "@/components/NowPlayingNextInQueue.astro";
---

<section
  class="flex-1 flex flex-col gap-2 bg-elevated rounded-lg relative"
>
<div class="styled-scrollbar overflow-y-auto absolute inset-0 py-4 pl-4">
  <div class="flex flex-row items-center mb-2 justify-between">
    <span class="font-bold hover:underline hover:cursor-pointer"
      >Disposable Heroes</span
    >
    <X
      class="text-gray-400 rounded-full py-1.5 hover:bg-elevated-2 hover:text-white hover:cursor-pointer transition-colors ease-out"
      size={32}
    />
  </div>
  <div class="flex flex-col gap-4">
    <NowPlayingSongCard />
    <NowPlayingAboutTheArtist />
    <NowPlayingCredits />
    <NowPlayingMerch />
    <NowPlayingNextInQueue />
  </div>
</div>
</section>
