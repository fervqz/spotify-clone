---
import { Music3, Play } from "lucide-astro";
---

<div class="bg-elevated-2 p-4 flex flex-col gap-2 rounded-lg">
  <div class="flex flex-row flex-wrap justify-between items-center">
    <span class="font-semibold">Next in queue</span>
    <span
      class="text-gray-400 font-semibold text-sm hover:text-white hover:underline hover:cursor-pointer hover:scale-105 transition ease-out"
      >Open queue</span
    >
  </div>
  <div
    class="group flex flex-row hover:bg-elevated-4 py-2 pr-2 hover:cursor-pointer rounded gap-2"
  >
    <div class="flex items-center h-full px-2.5">
      <Music3
        class="text-gray-400 group-hover:hidden"
        size={12}
        stroke-width={3}
      />
      <Play
        class="hidden text-white group-hover:block"
        size={12}
        stroke-width={3}
        fill="white"
      />
    </div>
    <img
      role="presentation"
      alt=""
      src="https://picsum.photos/46"
      height="46px"
      class="size-10 rounded bg-elevated-3"
      loading="lazy"
    />
    <div class="flex flex-col">
      <span class="hover:underline">You've Got another Thing Coming</span>
      <span class="text-sm text-gray-400 hover:textwhite hover:underline"
        >Judast Priest</span
      >
    </div>
  </div>
</div>
