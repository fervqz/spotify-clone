---
import {
  SquarePlay,
  MicVocal,
  ListEnd,
  MonitorSpeaker,
  Volume,
  Volume1,
  Volume2,
  VolumeX,
  PictureInPicture2,
  Maximize2,
} from "lucide-astro";
---

<div class="flex flex-row items-center justify-end">
  <div class="active relative">
    <SquarePlay
      class="text-accent-muted py-[0.4rem] hover:text-accent hover:cursor-pointer hover:scale-105 transition ease-out"
      size={30}
    />
  </div>
  <div class="relative">
    <MicVocal
      class="text-gray-400 py-[0.4rem] hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
      size={30}
    />
  </div>
  <div class="relative">
    <ListEnd
      class="text-gray-400 py-[0.4rem] hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
      size={30}
    />
  </div>
  <div id="now-playing-device" class="relative">
    <MonitorSpeaker
      class="text-accent-muted py-[0.4rem] hover:text-accent hover:cursor-pointer hover:scale-105 transition ease-out"
      size={30}
    />
  </div>
  <div class="relative">
    <Volume2
      class="text-gray-400 py-[0.4rem] hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
      size={30}
    />
  </div>
  <div class="w-24 bg-gray-600 rounded-full h-1 mr-2">
    <div class="bg-white h-1 rounded-full" style="width: 45%"></div>
  </div>
  <PictureInPicture2
    class="text-gray-400 py-[0.4rem] hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
    size={30}
  />
  <Maximize2
    class="text-gray-400 py-[0.4rem] hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
    size={28}
  />

  <style>
    .active::before {
      content: "";
      background-color: theme("colors.accent-muted");
      position: absolute;
      left: 13px;
      bottom: -4px;
      min-height: 4px;
      min-width: 4px;
      border-radius: 100%;
    }
    #now-playing-device::before {
      content: "";
      background-color: theme("colors.accent");
      position: absolute;
      rotate: 45deg;
      left: 7px;
      bottom: -39px;
      min-height: 20px;
      min-width: 20px;
    }

    #now-playing-device::after {
      content: "ðŸ”ˆ Playing on Jon Snow's iPhone";
      font-size: 14px;
      text-align: center;
      color: black;
      position: absolute;
      left: -150px;
      bottom: -48px;
      width: 300px;
    }
  </style>
</div>
