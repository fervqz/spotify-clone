---
import Title from "@/components/Title.astro";
---

<div class="flex flex-col gap-3 my-2">
  <div class="flex flex-row justify-between">
    <Title>Made for Jon Snow</Title>
    <a
      href="#"
      class="text-sm text-gray-400 font-semibold mt-auto hover:underline"
      >Show all</a
    >
  </div>

  <ul class="flex flex-row overflow-x-scroll">
    {
      Array.from(Array(10).keys()).map((i) => (
        <li class="flex flex-col gap-1.5 size-48 rounded-lg p-2 min-w-[12.7rem] h-auto hover:bg-elevated-2 hover:cursor-pointer">
          <div class="bg-blue-200 aspect-square w-full rounded-lg" />
          <span>Daily Mix 1</span>
          <span class="text-sm text-gray-400">
            Dire Straits, Frank Sinatra, Ray Parker Jr.and more
          </span>
        </li>
      ))
    }
  </ul>
</div>
