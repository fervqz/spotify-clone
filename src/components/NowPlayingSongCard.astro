---
import { Heart, Ellipsis } from "lucide-astro";
---

<div class="flex flex-col gap-2">
  <img
    role="presentation"
    alt=""
    src="https://picsum.photos/317"
    height="317px"
    class="aspect-square w-full rounded-lg bg-elevated-2"
    loading="lazy"
  />

  <div class="flex flex-row justify-between">
    <div class="flex-1 flex flex-col justify-center max-w-[86%] relative">
      <div id="now-playing-songs-title" class="absolute h-full w-full z-10">
      </div>
      <span
        class="font-bold text-2xl tracking-tight truncate overflow-hidden mb-0 pb-0"
      >
        New Kid in Town - 2013 Remaster
      </span>
      <span class="text-gray-400 text-md">Eagles</span>
    </div>
    <div class="flex flex-row justify-end items-center">
      <Heart
        class="p-2 text-gray-400 hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out"
        size={34}
      />
      <Ellipsis
        class="py-2 text-gray-400 hover:text-white hover:cursor-pointer hover:scale-105 transition ease-out w-5"
        size={34}
      />
    </div>
  </div>
</div>

<style>
  #now-playing-songs-title {
    background: red;
    background: linear-gradient(
      to left,
      theme("colors.elevated") 2.5%,
      theme("colors.elevated"),
      #00000000 15%
    );
  }
</style>
