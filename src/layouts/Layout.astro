---
import "@fontsource-variable/dm-sans";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Layout clone of famous music web app" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:url" content="https://fv-spotify-clone.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Clonify | The Spotify Layout Clone" />
    <meta
      property="og:description"
      content="This project is for educational purposes only and is not intended to be a finished product or a template for other projects, but rather a case study aimed at better understanding the Spotify Web UI."
    />
    <meta
      property="og:image"
      content="https://fv-spotify-clone.netlify.app/cover.webp"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="fv-spotify-clone.netlify.app" />
    <meta
      property="twitter:url"
      content="https://fv-spotify-clone.netlify.app/"
    />
    <meta name="twitter:title" content="Clonify | The Spotify Layout Clone" />
    <meta
      name="twitter:description"
      content="This project is for educational purposes only and is not intended to be a finished product or a template for other projects, but rather a case study aimed at better understanding the Spotify Web UI."
    />
    <meta
      name="twitter:image"
      content="https://fv-spotify-clone.netlify.app/cover.webp"
    />
    <meta property="og:image:height" content="750" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    background: #000;
    font-family: "DM Sans Variable", system-ui, sans-serif;
    color: #fff;
    overflow-y: hidden;
  }

  *.unselectable {
    -moz-user-select: -moz-none;
    -khtml-user-select: none;
    -webkit-user-select: none;

    /*
     Introduced in IE 10.
     See http://ie.microsoft.com/testdrive/HTML5/msUserSelect/
   */
    -ms-user-select: none;
    user-select: none;
  }

  .styled-scrollbar {
    overflow: auto;
    scrollbar-color: transparent transparent;
    transition: scrollbar-color 0.1s ease-out;
  }
  .styled-scrollbar:hover {
    overflow-y: auto;
    scrollbar-color: rgba(128, 128, 128, 0.446) transparent;
  }
</style>
